<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Basic Store Website</display-name>

  <servlet>
    <servlet-name>start-servlet</servlet-name>
    <servlet-class>servlet.StartServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>homepage-servlet</servlet-name>
    <servlet-class>servlet.HomepageServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>show-product-servlet</servlet-name>
    <servlet-class>servlet.ShowProductServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>shopping-cart-servlet</servlet-name>
    <servlet-class>servlet.ShoppingCartServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>start-servlet</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>homepage-servlet</servlet-name>
    <url-pattern>/homepage</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>show-product-servlet</servlet-name>
    <url-pattern>/show-product</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>shopping-cart-servlet</servlet-name>
    <url-pattern>/shopping-cart</url-pattern>
  </servlet-mapping>
</web-app>
